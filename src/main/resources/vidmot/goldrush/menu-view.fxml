<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>

<MenuBar fx:id="menuBar" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.goldrush.MenuController">
    <Menu text="Skrá">
        <items>
            <RadioMenuItem fx:id="nyrLeikur" onAction="#onNyrLeikur" text="Nýr Leikur" />
            <RadioMenuItem fx:id="lokaGlugga" onAction="#onLokaPressed" text="Heim" />
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Hjálp">
        <items>
            <RadioMenuItem fx:id="umforrit" mnemonicParsing="false" onAction="#onUmForritid" text="Um Forritið" />
            <RadioMenuItem fx:id="leikreglur" mnemonicParsing="false" onAction="#onLeikreglur" text="Leiðbeiningar" />
        </items>
    </Menu>
</MenuBar>
